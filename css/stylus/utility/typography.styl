// ======================================================//
// Text utilities
// ======================================================//
p
  line-height 25px
  margin-top 1rem
  
a 
  text-decoration none
  color white
  
.text-center
  font-size 1.2rem
  font-weight 200
  text-align center
  max-width 600px
  
.text-left
  color white
  font-weight 600
  
  &--footer 
    font-size 1.2rem
    font-weight 400
  
.title
  font-size 2rem
  font-weight 600
  color #007C5A
  
  &--secondary
    color white

.title--main
  font-weight 200
  color white
  font-size 3rem
  margin-bottom 1rem
  
.title--big
  font-weight 200
  color $secondary
  font-size 3rem 
  
.subtitle
  color #007C5A
  font-size 1rem
  margin 1rem 0 3rem 0