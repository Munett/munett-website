.about
  wrapped()
  padding-top 10rem
  padding-bottom 10rem
  text-align center
  
  +below($desktop)
    wrapped(90%)

  .subtitle
    wrapped(900px)
    margin-top 2.5rem
    
.validation
  display flex
  flex-wrap wrap
  margin-top 4rem
  
  .tag
    margin-top 1rem

.validation-items
  lost-column 1/2
  
  +below($mobile)
    lost-column 1 0 0
    
    & + &
      margin-top 2rem
  
  img
    width 100%
    max-width 500px
    
.apiReference
  wrapped()
  padding-top 10rem
  padding-bottom 10rem
  display flex
  align-items center
  background $main-gradient
  color white

  .title
  .tag
    color white

  +below($desktop)
    wrapped(90%)
  
  +below(750px)
    text-align center
    flex-direction column
    
    .apiReference-info
    .apiReference-sliderContainer
      lost-column 1 0 0

.apiReference-info 
  lost-column 4/12
  
  +below(1024px)
    lost-column 5/12
    
.apiReference-actions
  margin-top 3rem
  display flex
  flex-direction column
  align-items flex-start
  
  +below($tablet)
    align-items center
    margin-bottom 2rem
      
.apiReference-sliderContainer
  display flex
  align-items stretch
  position relative
  lost-column 7/12 0
  
  &:before
    content ''
    position absolute
    top 0
    right 0
    bottom 0
    left 0
    transform translateY(1.5rem) translateX(1.5rem)
    border 1px solid white
    border-radius 4px
    
    +below(1024px)
      display none

.apiSlider-curp
.apiSlider-info
  padding-top 49px
  
.getQuote
  wrapped()
  padding-top 15rem
  padding-bottom 15rem
  display flex
  flex-direction column
  justify-content center
  align-items center
  text-align center
  background url('/img/stars-ilustration.svg') 50% 25% no-repeat 
  
  +below($desktop)
    wrapped(90%)
  .btn
    margin-top 2rem
    
.contact
  display none
  text-align center
  