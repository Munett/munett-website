.main
  wrapped()
  height 100vh
  display flex
  align-items center
  justify-content space-between
  background url('/img/bg-main.svg') no-repeat
  background-size cover
  
  +below(75rem)
    wrapped(95%)
  
  &-image
    lost-column 5/12
    
    +below(55rem)
      display none
  
  &-info 
    lost-column 6/12
    
    +below(55rem)
      lost-column 3/12
      text-align center
      width 100%
    
.about 
  display flex 
  flex-direction column
  align-items center
  height 100vh
  justify-content center
  margin 4rem 0
  
.documentation
    display flex
    align-items baseline
    margin-top 1rem
    
    +below(75rem)
      flex-direction column
      align-items center
    
    &-validate
      display flex
      flex-direction column
      padding 2rem 3rem
      align-items center
    
.demo 
  wrapped()
  height 100vh
  display flex
  justify-content space-between
  align-items center
  background-image: linear-gradient(42deg, #00D6BE 0%, #00AC89 100%, #00AC89 100%);
  
  +below(75rem)
    flex-direction column
    justify-content center
    width 100%
    text-align center
  
  &-info 
    display flex 
    flex-direction column
    justify-content center
    lost-column 4/12
    
    +below(75rem)
      margin-bottom 3rem
    
  &-actions 
    display flex 
    flex-direction column
    justify-content space-around
    margin-top 3rem
    width 60%
    
    +below(75rem)
      width 100%
  
.quote
  display flex 
  height 70vh
  justify-content center
  flex-direction column
  align-items center
  background url('/img/stars-ilustration.svg') 50% 25% no-repeat 