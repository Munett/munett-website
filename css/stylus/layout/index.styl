.main
  wrapped()
  height 100vh
  background url('/img/bg-main.svg') center bottom no-repeat
  background-size cover
  display flex
  align-items center
  color white
  
  .title
    color white
  
.main-image
  lost-column 1/2 0
  
  img
    margin-right auto
    margin-left auto
    max-width 450px
    
.main-info
  max-width 500px
    
.about
  wrapped()
  padding-top 10rem
  padding-bottom 10rem
  text-align center
  
  .subtitle
    lost-center 8/12
    margin-top 2.5rem
    
.validation
  display flex
  align-items baseline
  justify-content center
  margin-top 4rem
  
  &-items
    lost-column 1/2 2
    
  .subtitle
    lost-center 1/2
    
  .tag
    margin-top 1rem
    
.apiReference
  wrapped()
  display flex
  align-items center
  justify-content space-between
  padding-top 10rem
  padding-bottom 10rem
  background $main-gradient
  color white
      
  &-info 
    lost-column 4/12 0
    
    .title
    .tag
      color white
      
  &-actions
    margin-top 3rem
    display flex
    flex-direction column
    align-items flex-start
      
.apiReference-sliderContainer
  display flex
  align-items stretch
  position relative
  lost-column 7/12 0
  
  &:before
    content ''
    position absolute
    top 0
    right 0
    bottom 0
    left 0
    transform translateY(1.5rem) translateX(1.5rem)
    border 1px solid white
    border-radius 4px

.apiSlider-curp
.apiSlider-info
  padding-top 49px
  
.getQuote
  wrapped()
  padding-top 15rem
  padding-bottom 15rem
  display flex
  flex-direction column
  justify-content center
  align-items center
  background url('/img/stars-ilustration.svg') 50% 25% no-repeat 
  
  .btn
    margin-top 2rem
    
.contact
  display none
  text-align center
  