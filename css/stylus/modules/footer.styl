.footer
  wrapped()
  display flex
  padding-top 3rem
  padding-bottom 3rem
  background-color $primary
  
  &-column
    display flex
    flex-direction column
    align-items flex-start
    lost-column 2/12 0
    
    &:first-child
      lost-column 4/12 


.footer-logo
  width 150px
  
  img
    display block
    width 100%
    
.footer-tag
  margin-top 2rem
  max-width 180px
  font-size 22px
  color white
  line-height 24px
  
.footer-title
.footer-link
  font-size 14px
  color white

.footer-title
  margin-bottom 1.5rem
  font-weight 700
  letter-spacing 0.7px
  text-transform uppercase

.footer-link
  text-decoration none
  
  & + &
    margin-top .5rem
  
  &:hover
    text-decoration underline