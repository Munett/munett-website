btn-shadow()
  &:before
    content ''
    position absolute
    height 80%
    right 1rem
    left 1rem
    bottom 2px
    box-shadow 0 5px 15px 0 rgba(0,0,0,0.4)
    border-radius 4px
    z-index -1

.btn
  btn-shadow()
  text-align center
  position relative
  display flex
  align-items center
  height 40px
  padding-right 1.5rem
  padding-left 1.5rem
  font-size 12px
  text-decoration none
  text-transform uppercase
  font-weight 700
  transition 300ms all ease-in-out
  
.btn--primary
  color white
  border-radius 100px
  letter-spacing .8px
  
.btn--green
  background-color $primary

  &:hover
    background-color darken($primary, 5)

.btn--black
  background-color $black

  &:hover
    background-color lighten($black, 10)