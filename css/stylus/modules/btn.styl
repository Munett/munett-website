.btn
  background-color $primary
  font-family 'acto', sans-serif
  padding .5rem 2rem
  text-decoration none
  color white
  border-radius 4rem
  box-shadow: 0 6px 8px 0 rgba(0,0,0,0.30);
  margin-top 2rem

  
  &--secondary
    font-weight 600
    background-color $darkgreen
    transition 350ms all ease-in-out
    margin-top 0
    
    &:hover
      background-color $lightgreen